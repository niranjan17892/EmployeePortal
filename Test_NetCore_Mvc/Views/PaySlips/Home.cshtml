@model EmployeeRepository


@{

    ViewData["Title"] = "Monthly Pay Slip";
}


<div class="row-fluid">
    <form asp-controller="PaySlips" asp-action="Generate" method="post" class="needs-validation" novalidate>
        <div class="form-group row">

            <label class="col-form-label col-md-2" for="validationCustom01">First name</label>
            <div class="col-md-6">
                <input asp-for="FirstName" type="text" class="form-control" id="validationCustom01" placeholder="First name" required>
                <div class="invalid-feedback">
                    Please enter your first name.
                </div>
            </div>


        </div>
        <div class="form-group row">
            <label class="col-form-label col-md-2" for="validationCustom02">Last name</label>
            <div class="col-md-6">
                <input asp-for="LastName" type="text" class="form-control" id="validationCustom02" placeholder="Last name" required>
                <div class="invalid-feedback">
                    Please enter your last name.
                </div>
            </div>


        </div>

        <div class="form-group row">
            <label class="col-form-label col-md-2" for="validationCustom02">Annual Salary</label>
            <div class="col-md-6 input-group">
                <input asp-for="AnnualSalary" type="number" min="0" class="form-control" id="validationCustom02" aria-describedby="inputGroupAppend" placeholder="Annual Salary" required>
                <div class="input-group-append">
                    <span class="input-group-text" id="inputGroupAppend">$</span>
                </div>
                <div class="invalid-feedback">
                    Salary cannot be negative. Please enter a valid amount.
                </div>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-form-label col-md-2" for="validationCustomUsername">Super Rate</label>
            <div class="col-md-6">
                <div class="input-group">

                    <input asp-for="SuperRate" type="number" min="0" max="50" class="form-control" id="validationCustomUsername" placeholder="Super Rate" aria-describedby="inputGroupAppend" required>
                    <div class="input-group-append">
                        <span class="input-group-text" id="inputGroupAppend">%</span>
                    </div>
                    <div class="invalid-feedback">
                        Please choose between 0% - 50%.
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-form-label col-md-2" for="validationCustom02">Payment Start Date</label>
            <div class="col-md-6">
                <input asp-for="StartDate" type="date" class="form-control" id="validationCustom02" placeholder="Start Date" required>
                <div class="invalid-feedback">
                    Please select a valid date.
                </div>
            </div>


        </div>

        <button class="btn btn-primary" type="submit">Generate</button>
    </form>

    <script>

(function() {
  'use strict';
  window.addEventListener('load', function() {

    var forms = document.getElementsByClassName('needs-validation');

    var validation = Array.prototype.filter.call(forms, function(form) {
      form.addEventListener('submit', function(event) {
        if (form.checkValidity() === false) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  }, false);
})();
    </script>
</div>